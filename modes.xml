<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <mode name="lif-twol" install="no">
    <pipeline>
      <program name="hfst-strings2fst -S"/>
      <program name="hfst-compose-intersect">
        <file name=".deps/lif.twol.hfst"/>
      </program>
      <program name="hfst-fst2strings"/>
    </pipeline>
  </mode>

  <mode name="lif-morph" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="lif.automorf.bin"/>
      </program>
    </pipeline>
  </mode>


  <mode name="lif-lexd" install="no">
    <pipeline>
      <program name="hfst-lookup">
        <file name=".deps/lif.LR.lexd.hfst"/>
      </program>
    </pipeline>
  </mode>

  <mode name="lif-gener" install="yes">
    <pipeline>
      <program name="lt-proc -g">
        <file name="lif.autogen.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="lif-tagger" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="lif.automorf.bin"/>
      </program>
      <program name="cg-proc -1 -n -w">
        <file name="lif.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="lif-disam" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="lif.automorf.bin"/>
      </program>
      <program name="cg-conv -a"/>
      <program name="vislcg3 --trace --grammar">
        <file name="lif.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="lif-paradigm" install="yes">
    <pipeline>
      <program name="lt-paradigm -s">
        <file name="lif.autogen.bin"/>
      </program>
    </pipeline>
  </mode>

</modes>

